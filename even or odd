import java.util.*;
public class evenorodd {
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        System.out.println("Enter an number : ");
        int a=s.nextInt();
        if((a&1)==0){
            System.out.println(a+" is an even number");
        }
        else
            System.out.println(a+" is an odd number");

    }
    
}
